<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".payments">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:scrollbarStyle="outsideOverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="fill">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="98dp">

                    <TextView
                        android:id="@+id/cntttl"
                        android:layout_width="336dp"
                        android:layout_height="match_parent"
                        android:lineSpacingExtra="18sp"
                        android:text="عدد الاشخاص"
                        android:textAlignment="center"
                        android:textSize="36sp"
                        android:typeface="sans" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/button"
                            android:layout_width="209dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="12dp"
                            android:text="Button"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/cntnum"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/cntnum"
                            android:layout_width="159dp"
                            android:layout_height="47dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginLeft="4dp"
                            android:text="6"
                            android:textAlignment="center"
                            android:textSize="36sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />
                    </android.support.constraint.ConstraintLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/texton"
                        android:layout_width="296dp"
                        android:layout_height="wrap_content"
                        android:text="قيمة القطية"
                        android:textAlignment="center"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mylist"
                            android:layout_width="266dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingRight="100dp"
                            android:text="800"
                            android:textAlignment="center"
                            android:textSize="36sp" />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Button" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/rent"
                        android:layout_width="379dp"
                        android:layout_height="wrap_content"
                        android:text="باقي على الاجار"
                        android:textAlignment="center"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/renttime"
                        android:layout_width="339dp"
                        android:layout_height="80dp"
                        android:text="00:00:00"
                        android:textAlignment="center"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lastpay"
                        android:layout_width="346dp"
                        android:layout_height="match_parent"
                        android:text="تاريخ اخر دفع"
                        android:textAlignment="center"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lastpaytime"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:text="0/0/0"
                        android:textAlignment="center"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv8"
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv7"
                        android:layout_width="343dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv9"
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv10"
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv11"
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv12"
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv13"
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="36sp" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>